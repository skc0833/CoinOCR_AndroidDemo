<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skc.coin_ocr"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.CoinOCR_AndroidDemo">
        <activity
            android:name="com.skc.coin_ocr.StillImageActivity"
            android:exported="false" />
        <activity
            android:name="com.skc.coin_ocr.LivePreviewActivity"
            android:exported="false" />
        <activity
            android:name="com.skc.coin_ocr.CameraXLivePreviewActivity"
            android:exported="false" />
        <activity
            android:name="com.skc.coin_ocr.ChooserActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.skc.coin_ocr.preference.SettingsActivity"
            android:exported="false"/>
    </application>

</manifest>